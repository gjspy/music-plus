{
	"compilerOptions": {
		"target": "ES2020",            // JS version output
		"module": "ESNext",            // Module system (ESM)
		"strict": true,                // Enable all strict type checks
		"esModuleInterop": true,       // Allow default imports from CJS
		"skipLibCheck": true,          // Skip type checking of .d.ts
		"forceConsistentCasingInFileNames": true,
		"outDir": "dist",              // Where compiled JS goes
		"rootDir": "src"               // Where your TS source lives
	},
	"include": ["src"],              // Files/folders to compile
	"exclude": ["node_modules"]      // Ignore deps
}
