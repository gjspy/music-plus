{
	"manifest_version": 3,
	"name": "YTMUSIC Fixer",
	"version": "3.4.3",

	"description": "Provides additional features to the Youtube Music site.",

	"icons": {
		"96": "icons/musicemoji.png"
	},

	"content_scripts": [
		{
			"matches": ["*://music.youtube.com/*"],
			"css": ["inject.css"],
			"run_at": "document_start"
		},
		{
			"matches": ["*://music.youtube.com/*"],
			"js": ["contentScript.js"],
			"world": "ISOLATED",
			"run_at": "document_idle"
		}
	],

	"background": {
		"page": "background/bkgPage.html"
	},

	"web_accessible_resources": [{
		"matches": ["*://music.youtube.com/*"],
		"resources": ["utils.js"]
	}],

	"host_permissions": [
		"*://music.youtube.com/*"
	],

	"permissions": [
		"tabs",
		"storage",
		"activeTab",
		"unlimitedStorage",
		"scripting",
		"theme",
		"menus"
	],

	"browser_specific_settings": {
		"gecko": {
			"id": "sitefixer@ultra",
			"strict_min_version": "42.0",
			"update_url": "https://gjspy.github.io/music-plus/updates.json"
		}
	},

	"action": {
		"default_icon": "icons/musicemoji.png",
		"default_title": "YTMUSIC+",
		"default_popup": "popup/index.html"
	}
}